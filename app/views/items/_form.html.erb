<%= form_for [:resturant, @item],:html => {:class => "form-horizontal center"},validate: true do |f| %>
  <div class=form-width>
    <div class="form-group">
      <%= f.label :name,"Name",class: "col-md-4 control-label"%>
      <div class="col-md-8">
        <%= f.text_field :name,required:true,class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price,"Price",required:true,class: "col-md-4 control-label" %>
      <div class="col-md-8">
       <%= f.number_field :price,required:true,class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description,"Description",class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :description,required:true,:cols => 30, :rows => 5,class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :avatar,"Picture",class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.file_field :avatar,class: "form-control" %>
      </div>
    </div>
     <div class="form-check">
      <%= collection_check_boxes(:item, :category_ids, Category.all, :id, :name) do |b| %>
      <%= b.label(class: "form-check-label") { b.check_box + b.text } %>
    <% end %>
    <div >
      <%= f.submit "ADD",class: "btn btn-default btn-primary btn-margin" %>
    </div>
  </div>
<%end%>
