  <div class='row'>
  <% group.each do |cart| %>
    <% cart.items.each do |item| %>

          <%= form_for @cart,:html => {:class => "form-horizontal center"},validate: true do |f|%>
            <div class=form-width>
              <div class="form-group">
                <%= f.label :quantity,"Quantity",class: "col-md-4 control-label"%>
                <div class="col-md-8">
                  <%= f.text_field :quantity, class: "form-control"%>
                </div>
              </div>
