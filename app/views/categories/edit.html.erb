<%= form_for @category,:html => {:class => "form-horizontal center"},validate: true do |f|%>
 <div class=form-width>
  <div class="form-group">
    <%= f.label :name,"Name",class: "col-md-4 control-label"%>
     <div class="col-md-8">
      <%= f.text_field :name, class: "form-control"%>
     </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar,"Picture",class: "col-md-4 control-label"%><br/>
    <div class="col-md-8">
     <%= f.file_field :avatar, class: "form-control"%>
    </div>
  </div>
    <%= f.submit "Update Category", class: "btn btn-default btn-primary btn-margin"%>
  </div>
<%end%>
